<div class="row container">
    <!-- Page Layout here -->
<div class="col s12">
    <div class="row">
      <div class="col s3" >
          <h5 class="center-align blue-text text-blue lighten-2">Events</h5>
            <div class="collection">
                <a href="/{{user.role}}/event" class="collection-item grey-text">Crear eventos</a>
                <a href="#!" class="collection-item grey-text">Eventos</a>
            </div>
            <h5 class="center-align blue-text text-blue lighten-2">Adds</h5>
            <div class="collection">
                <a href="#!" class="collection-item grey-text">Find books</a>
                <a href="#!" class="collection-item grey-text">Find who helps</a>
            </div>
              <nav>
                <div class="nav-wrapper">
                <form>
                    <div class="input-field  blue lighten-2">
                    <input id="search" type="search" required>
                    <label class="label-icon" for="search"><i class="material-icons">search</i></label>
                    <i class="material-icons">close</i>
                    </div>
                </form>
                </div>
            </nav>
      </div>
    
      <div class="col s9">

            {{#each post}}
        <div>
            <div class="card horizontal hoverable">
            <div class="card-image">
                <img src="{{user.photoURL}}" name="photoURL" alt="profile_image" id="profilepic" class="responsive-img">
            </div>

  
            <div class="card-stacked">
                <div class="card-content">
                 <h5 class="header blue-text text-blue lighten-2">{{this.authorName}} {{this.authorlastName}}<p>{{this.authorRole}}</p></h5>
                 <h5 class="grey-text">{{this.content}}</h5>
                 </div>
                    <!-- Modal comentar -->
                    <a class="waves-effect  blue lighten-2 btn modal-trigger" href="#modal1">Comment</a>

                    <!-- Modal Structure -->
                    
                    <div id="modal1" class="modal">
                     <form action="/{{../user.role}}/comment" method="POST" enctype="multipart/form-data">
                      <div class="modal-content"><h4>Comment</h4>
                      <input name="content" placeholder="Placeholder" id="urcomment" type="text" class="validate">
                      <label for="your_comment">your comment</label>
                    </div>
                    <div class="modal-footer">
                        <a class="waves-effect white-text blue lighten-2 btn-flat" type= 'submit'>Comment</a>
                        <a class="waves-effect white-text blue lighten-2 btn-flat" type= 'submit'>Cancel</a>
                    </div>
                     </form>
                    </div>
                    <a href="/{{../user.role}}/comments/{{this.id}}"  class="waves-effect white-text blue lighten-2 btn-flat" type="submit'>See comments</a>
            </div>
        </div>
      </div>
              {{/each}}

    </div>
</div>
</div>
</div>