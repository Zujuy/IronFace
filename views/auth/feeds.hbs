<div class="row container">
  <!-- Page Layout here -->
  <div class="col s12">
    <div class="row">
      <div class="col s3" >
          <h5 class="center-align blue-text text-blue lighten-2">Events</h5>
            <div class="collection">
                <a href="/{{user.role}}/event" class="collection-item grey-text">Add events</a>
                <a href="/{{user.role}}/allevents" class="collection-item grey-text">Events</a>
            </div>
            <h5 class="center-align blue-text text-blue lighten-2">Adds</h5>
            <div class="collection">
                <a href="https://barelo-app.herokuapp.com/" class="collection-item grey-text">Share your books with Barelo</a>
                <a href="https://hostinn.herokuapp.com/" class="collection-item grey-text">HostInn</a>
                <a href="https://vaquita-app.herokuapp.com/" class="collection-item grey-text">Vaquita</a>
                <a href="https://dynamic-course.herokuapp.com/" class="collection-item grey-text">Keep Learning with DYNAMIC</a>
                <a href="https://dynamic-course.herokuapp.com/" class="collection-item grey-text">Keep Learning with DYNAMIC</a>
            </div>
      </div>
    
            {{#each post}}
        <div class="col s9"> 
        <div class="row">
          <div class="card horizontal hoverable">
            <div class="card-image">
              <img src="{{this.authorPic}}" name="photoURL" alt="profile_image" id="profilepic"
                class="responsive-img"> <!-- imagen de perfil de usuario -->
            </div>
            <div class=" card-stacked">
              <div class="card-content">
                <a href="/{{../user.role}}/ironhacker/{{this.authorPic}}" class="blue-text blue lighten-2">
                  <h5>{{this.authorName}} {{this.authorlastName}}</h5>
                </a>
                <h5 class="grey-text">{{this.content}}</h5>
                <img src="{{this.picPath}}" alt="" class="responsive-img">

              </div>
              <!-- Modal comentar -->
              <a class="waves-effect  blue lighten-2 btn modal-trigger" href="#modal1">Comment</a>

              <!-- Modal Structure -->

              <div id="modal1" class="modal">
                <form action="/{{../user.role}}/comment" method="POST" enctype="multipart/form-data">

                  <div class="modal-content">
                    <h4>Comment</h4>
                    <input name="content" placeholder="Placeholder" id="first_name" type="text" class="validate">
                    <label for="first_name">your comment</label>
                  </div>
                  <div class="modal-footer">
                    <button class="modal-close waves-effect blue lighten-2 btn-flat" type="submit"><a
                        class="white-text">Comment</a></button>
                    <a class="modal-close waves-effect white-text blue lighten-2 btn-flat">Cancel</a>
                  </div>
                </form>
              </div>
              <br />
               <a href="/{{../user.role}}/comments/{{this.id}}" class="white-text a-btn-see" >
<button type="submit"
                class="white-text waves-effect blue lighten-2 btn center-align">
See comments
</button>
</a>
             
  
            </div>
          </div>
        </div>
      </div>

     
      {{/each}}
        </div>
    </div>
  </div>

