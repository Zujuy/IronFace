<div class="row container">
    <!-- Page Layout here -->
<div class="col s12">
    <div class="row">
      <div class="col s3" >
          <h5 class="center-align blue-text text-blue lighten-2">Events</h5>
            <div class="collection">
                <a href="/{{user.role}}/event" class="collection-item grey-text">Crear eventos</a>
                <a href="/{{user.role}}/allevents" class="collection-item grey-text">Eventos</a>
            </div>
            <h5 class="center-align blue-text text-blue lighten-2">Adds</h5>
            <div class="collection">
                <a href="https://barelo-app.herokuapp.com/" class="collection-item grey-text">Share your books with Barelo</a>
                <a href="https://hostinn.herokuapp.com/" class="collection-item grey-text">HostInn</a>
                <a href="https://vaquita-app.herokuapp.com/" class="collection-item grey-text">Vaquita</a>
                <a href="https://dynamic-course.herokuapp.com/" class="collection-item grey-text">Keep Learning with DYNAMIC</a>
                <a href="https://dynamic-course.herokuapp.com/" class="collection-item grey-text">Keep Learning with DYNAMIC</a>
            </div>
      </div>
    
      <div class="col s9">
        <div class="row">
        <div class="search">
              <h5 class="card-title grey-text">Find Ironhackers</h5>
              <form id="searchBar" action="/vistasperfiles" method="POST">
                <input id="searchValue" name="search" class="form-control mr-sm-2 " type="search" placeholder="Ironhacker name" aria-label="Search">
                <button id="search-button" class="waves-effect white-text blue lighten-2 btn-flat" type="submit"><i class="material-icons">search</i>Search</button>
              </form>
            </div>
         </div>
      </div>
    
{{#each events}}
      <div class="col s9">
        <div class="row">
            <div class="card horizontal hoverable">
            <div class="card-image">
                <img src="{{../user.photoURL}}" name="photoURL" alt="profile_image" id="profilepic" class="responsive-img"> <!-- imagen de perfil de usuario -->
            </div>
            <div class=" card-stacked">
                <div class="card-content">
                <h3 class="header blue-text text-blue lighten-2">{{this.eventName}}</h3>
                <h4 class="grey-text">{{this.creatorName}} {{this.creatorlastName}}</h4>
                <h5>{{this.content}}</h5>
                <p> Date: {{this.date}}</p>
                <p> Time: {{this.timeStart}} </p>
                <p> Place: {{this.place}}</p>
            </div>
        </div>
      </div>
      </div>
    </div>
{{/each}}
  
</div>
</div>
</div>