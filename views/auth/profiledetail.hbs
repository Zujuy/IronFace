  {{#each users.post}}
            <div class="card-stacked">
                <div class="card-content">
                 <h5 class="header blue-text text-blue lighten-2">{{this.authorName}} {{this.authorlastName}}<p>{{this.authorRole}}</p></h5>
                 <h5 class="grey-text">{{this.content}}</h5>
                 </div>
                    <!-- Modal comentar -->
                    <a class="waves-effect  blue lighten-2 btn modal-trigger" href="#modal1">Comment</a>

                    <!-- Modal Structure -->
                    
                    <div id="modal1" class="modal">
                     <form action="/{{../user.role}}/comment" method="POST" enctype="multipart/form-data">

                        <div class="modal-content">
                          <h4>Comment</h4>



                            <input name="content" placeholder="Placeholder" id="first_name" type="text" class="validate">

                            <label for="first_name">your comment</label>
                         </div>
                            <div class="modal-footer">

                                          <button class="modal-close waves-effect blue lighten-2 btn-flat" type="submit">
                                             <a  >Comment</a>
                                            </button>

                                    <a  class="modal-close waves-effect  blue lighten-2 btn-flat">Cancel</a>
                                  </div>
                     </form>
                       </div> 

                   
                     
                        <a type='submit' href="/{{../user.role}}/comments/{{this.id}}"  class="waves-effect  blue lighten-2 btn modal-trigger">See comments</a>
                    </form>
            </div>
        </div>
      </div>
              {{/each}}


