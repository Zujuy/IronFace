<div class="container">

    <div class="col s12 m8 offset-m2 l6 offset-l3">
        <div class="card-panel grey lighten-5 z-depth-1">
          <div class="row valign-wrapper">
            <div class="col s2">
              <img src="{{users.photoURL}}" name="photoURL" alt="profile_image" id="profilepic" class="responsive-img">
            </div>
            <div class="col s10">
              <span>
                <h3 class="blue-text text-blue lighten-2">{{users.username}} {{users.lastName}}</h3>
                <h4 class="blue-text text-blue lighten-2">{{users.role}}</h4>
                <p clas="grey-text">e-mail:{{users.email}}</p>
                <p clas="grey-text">Gender:{{users.genre}}</p>
                <p clas="grey-text">Birthday:{{users.birthdate}}</p>
                <p clas="grey-text">Bootcamp:{{users.bootCamp}}</p>
                <p clas="grey-text">Course mode:{{users.courseMode}}</p>
              </span>
            </div>
          </div>
        </div>
      </div>


